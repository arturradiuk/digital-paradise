<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <default-context-path>/digital-paradise</default-context-path>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>


    <security-role>
        <role-name>ADMINS</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Administrators pages</web-resource-name>
            <url-pattern>/faces/admin/*</url-pattern> <!-- url in the app context pas/... -->
            <url-pattern>/admin/*</url-pattern> <!-- url in the app context pas/... -->
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMINS</role-name>
        </auth-constraint>
    </security-constraint>


    <security-role>
        <role-name>EMPLOYEES</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>

            <web-resource-name>Employees pages</web-resource-name>
            <url-pattern>/faces/employee/*</url-pattern> <!-- url in the app context pas/... -->
            <url-pattern>/employee/*</url-pattern> <!-- url in the app context pas/... -->

        </web-resource-collection>
        <auth-constraint>
            <role-name>EMPLOYEES</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>CLIENTS</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Clients pages</web-resource-name>

            <url-pattern>/faces/client/order/*</url-pattern> <!-- url in the app context pas/... -->
            <url-pattern>/client/*</url-pattern> <!-- url in the app context pas/... -->



        </web-resource-collection>
        <auth-constraint>
            <role-name>CLIENTS</role-name>
        </auth-constraint>
    </security-constraint>




    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/auth/auth.html</form-login-page>
            <form-error-page>/auth/error.html</form-error-page>
        </form-login-config>
    </login-config>

</web-app>